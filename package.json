{
  "name": "turkce-sozluk",
  "version": "1.0.0",
  "description": "Kelimelerin anlamlarını ister çift tıklayarak ister basılı tutup seçerek gösteren uzantı.",
  "main": "src/manifest.json",
  "scripts": {
    "watch": "webpack --config ./webpack.config.dev.js --watch",
    "build-dev": "webpack --config ./webpack.config.dev.js --stats-error-details",
    "build": "webpack --config ./webpack.config.js",
    "lint": "web-ext lint -s ./dist",
    "package": "web-ext build -s ./dist -a ./extension-package/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MertKures/Turkce-sozluk.git"
  },
  "keywords": [
    "web-extension",
    "Türkçe",
    "Sözlük"
  ],
  "author": "Mert Kureş",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MertKures/Turkce-sozluk/issues"
  },
  "homepage": "https://github.com/MertKures/Turkce-sozluk#readme",
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.0",
    "web-ext": "^7.2.0",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
